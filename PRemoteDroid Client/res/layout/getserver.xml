	android:layout_height="fill_parent">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
		<TextView
			android:text="@string/text_get_server_content_1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
		<TextView
			android:id="@+id/getServerUrl"
			android:textSize="20dp"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
		<TextView
			android:text="@string/text_get_server_content_2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
	</LinearLayout>
</ScrollView>